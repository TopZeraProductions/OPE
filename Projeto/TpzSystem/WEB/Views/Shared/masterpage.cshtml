@using WEB.AppHelpers.HtmlHelpers

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.title</title>
    
        <link rel="stylesheet" type="text/css" href="~/Assets/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="~/Assets/lib/fontawesome-free-5/css/all.css" />
        <link rel="stylesheet" type="text/css" href="~/Assets/css/site.css" />
        <link rel="stylesheet" type="text/css" href="~/Assets/lib/jquery-toast-plugin/jquery.toast.min.css" />
        
        @RenderSection("Styles", required: false)
    
    </head>
    <body>
    <header>
    
        @Html.ContentLoad("box-cookie-consent",@Url.Action("PartialCookieConsent","Privacy", new { area = "Start" }))
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Home", "Home", new {area = "Start"})">TpzSystem</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Home", "Home", new { area = "Start" })">
                                <i class="fas fa-home"></i>
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("PrivacyDetails", "Privacy", new { area = "Start" })">Privacidade</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("ListProducts", "ProductsConsult", new { area = "products" })">Products</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Logout", "Authentication", new { area = "Start" })">
                                sair
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2019 - TpzSystem - <a href="@Url.Action("Home", "Home", new {area = "Start"})">Privacy</a>
            </div>
        </footer>
    </body>
    
    <script type="text/javascript" src="~/Assets/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/Assets/lib/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Assets/lib/fontawesome-free-5/js/all.js"></script>
    <script type="text/javascript" src="~/Assets/lib/gasparesganga-jquery-loading-overlay/loadingoverlay.js"></script>
    <script type="text/javascript" src="~/Assets/lib/jquery-toast-plugin/jquery.toast.min.js"></script>

    <script type="text/javascript" src="~/Assets/js/System.js" ></script>

    @RenderSection("Scripts", required: false)
</html>

